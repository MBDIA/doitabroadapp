<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="registration-wrapper">
        <%= image_tag "formz_logo.png", class: "testclass" %>

        <h1>Vous n'avez pas re√ßu le mail de confirmation ?</h1>

        <hr/>
        <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <%= f.full_error :confirmation_token %>

        <div class="form-inputs">
          <%= f.input :email, label: false, placeholder: "Ton email", required: true, autofocus: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Renvoyer le mail de confirmation" %>
        </div>
        <% end %>
        <br/>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
